<h2>your dashboard</h2>
<section id="create-new-post">
    <h2>Create a new post!</h2>
    <form class="new-post-form">
        <div>
            <label for="post-title">title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">post</label>
            <textarea id="post-content" class="new-post-content" name="post-content"></textarea>
        </div>
        <button type="submit" class="btn">create</button>
    </form>
   
</section>
 <button  id="new-post-btn">+ New Post</button>


{{#if posts.length}}
<section>
    <h2>your posts</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit/delete post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>